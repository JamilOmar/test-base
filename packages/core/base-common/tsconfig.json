{
    "compilerOptions": {
      "removeComments": true,
      "module": "commonjs",
      "declaration": true,
      "target": "es6",
      "sourceMap": true,
      "noImplicitAny": false,
      "noImplicitThis": false,
      "outDir": "./dist",
      "rootDir":"./",
      "moduleResolution": "node",
      "pretty": true,
      "types": [
        "node"
      ]
    },
    "compileOnSave": true,
    "exclude": [
      "node_modules",
      "dist"
    ],
    "include":[
      "index.ts",
        "lib"
    ]
}